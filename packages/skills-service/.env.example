# Core Application Settings
NODE_ENV=development
PORT=3002
SERVICE_NAME=example_service
APP_VERSION=1.0.0
APP_URL=http://localhost:3002

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Database Configuration
MONGODB_URI=mongodb+srv://webdevuser:webdevuser123@cluster0.mz1u4.mongodb.net/skills_base_platform_skills_service

# Message Queue Configuration
RABBITMQ_URL=amqp://localhost:5672

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION=3600
JWT_AUDIENCE=your-audience

# Security Settings
# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_PATHS=/health,/metrics,/swagger,/swagger/json

# API Key Settings
API_KEY_ENABLED=false
API_KEYS=your_api_key_1,your_api_key_2
API_KEY_EXCLUDE_PATHS=/health,/metrics,/swagger./swagger/json


# IP Whitelist
IP_WHITELIST_ENABLED=false
ALLOWED_IPS=127.0.0.1,::1,0.0.0.0
IP_MAX_FAILED_ATTEMPTS=5
IP_BLOCK_DURATION=3600000

# Payload Settings
MAX_PAYLOAD_SIZE=10485760

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUTS=console,file
LOG_SKIP_PATHS=/health,/metrics

# Monitoring Configuration
ENABLE_METRICS=true
MONITOR_SAMPLE_RATE=1.0
METRICS_EXCLUDE_PATHS=/health,/metrics
SYSTEM_METRICS_INTERVAL=10000

# Admin Configuration
ADMIN_EMAIL=your_admin_email@example.com
